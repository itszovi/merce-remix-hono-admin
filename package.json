{
  "name": "vite-hono-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "node ./build/server/index.js",
    "build": "run-s build:*",
    "build:remix": "remix vite:build",
    "build:server": "tsx server.ts",
    "db:drop": "drizzle-kit drop --config=config/db.ts",
    "db:push": "drizzle-kit push --config=config/db.ts",
    "db:studio": "drizzle-kit studio --config=config/db.ts",
    "db:check": "drizzle-kit check --config=config/db.ts",
    "db:migrate": "drizzle-kit migrate --config=config/db.ts",
    "db:generate": "drizzle-kit generate --config=config/db.ts",
    "test": "vitest --run",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check --verbose --apply ."
  },
  "dependencies": {
    "@hono/node-server": "^1.13.4",
    "@hono/oauth-providers": "^0.6.2",
    "@hono/vite-dev-server": "^0.16.0",
    "@hono/zod-validator": "^0.4.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@remix-run/server-runtime": "^2.13.1",
    "@tanstack/react-form": "^0.34.1",
    "@tanstack/react-table": "^8.20.5",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.36.0",
    "esbuild": "^0.24.0",
    "hono": "^4.6.8",
    "html-react-parser": "^5.1.18",
    "isbot": "^5.1.17",
    "isomorphic-dompurify": "^2.16.0",
    "ky": "^1.7.2",
    "lucide-react": "^0.454.0",
    "postgres": "^3.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-auth": "^3.7.0",
    "remix-auth-form": "^1.5.0",
    "remix-hono": "^0.0.16",
    "slugify": "^1.6.6",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@remix-run/dev": "^2.13.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-istanbul": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
